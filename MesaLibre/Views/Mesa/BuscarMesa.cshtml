
@{
    ViewBag.Title = "Buscar Mesa";

    List<SelectListItem> listaRestaurantes = new List<SelectListItem>(){

    new SelectListItem
    {
        Text = "Restaurante1",
        Value = "Matriz"
    }
    ,
    new SelectListItem
    {
        Text = "Restaurante1",
        Value = "Sucursal 1"
    }
    };

    List<SelectListItem> listaLocales = new List<SelectListItem>(){

    new SelectListItem
    {
        Text = "Local1",
        Value = "1"
    }
    ,
    new SelectListItem
    {
        Text = "Local2",
        Value = "2"
    }
    };
}

<h2>Buscar Mesa</h2>

@{
    if (TempData["mensajeExitoso"] != null)
    {
        <div class="alert alert-success">
            <p>
                @TempData["mensajeExitoso"]
            </p>
        </div>
    }
    else if (TempData["mensajeError"] != null)
    {
        <div class="alert alert-danger">
            <p>
                @TempData["mensajeError"]
            </p>
        </div>
    }
}
<div class="row">

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Búsqueda todas</h5>
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                    @using (Ajax.BeginForm("BuscarMesaTodos", "Mesa", null,
new AjaxOptions
{
    HttpMethod = "Post",
    UpdateTargetId = "cargarListaMesas_Ajax",
    LoadingElementId = "image_loading",
    InsertionMode = InsertionMode.Replace
}, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-error" })
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Buscar" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Búsqueda por restaurante</h5>
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                    @using (Ajax.BeginForm("buscarMesasPorRestaurante", "Mesa", null,
new AjaxOptions
{
    HttpMethod = "Post",
    UpdateTargetId = "cargarListaMesas_Ajax",
    LoadingElementId = "image_loading",
    InsertionMode = InsertionMode.Replace
}, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-error" })
                        <div class="form-group">
                            @Html.Label("Restaurante", new { @class = "control-label" })
                            @Html.DropDownList("NombreRestaurante", listaRestaurantes, "Seleccionar", new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Local", new { @class = "control-label" })
                            @Html.DropDownList("NombreLocal", listaLocales, "Seleccionar", new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Buscar" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <img id="image_loading" src="~/Imagenes/loading.gif" width="30" height="30" style="display:none" />
</div>
<div id="cargarListaMesas_Ajax"></div>
