
@{
    ViewBag.Title = "Crear Restaurante";

    List<SelectListItem> listaTipoRestaurante = new List<SelectListItem>(){

    new SelectListItem
    {
        Text = "Normal",
        Value = "Normal"
    }
    ,
    new SelectListItem
    {
        Text = "Gold",
        Value = "Gold"
    }
    };

}

<h2>Crear Restaurante</h2>

@{
    if (TempData["mensajeExitoso"] != null)
    {
        <div class="alert alert-success">
            <p>
                @TempData["mensajeExitoso"]
            </p>
        </div>
    }
    else if (TempData["mensajeError"] != null)
    {
        <div class="alert alert-danger">
            <p>
                @TempData["mensajeError"]
            </p>
        </div>
    }
}
@using (Html.BeginForm("CrearReservaManual", "Reserva", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            <div class="row">
                <div id="cargarDatosComensal_Ajax"></div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Razón Social", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("RazonSocial", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nombre Comercial", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("NombreComercial", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("RUC ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("RUC", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Teléfono Restaurante", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("TelefonoRestaurante", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(" Dirección", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("DireccionRestaurante", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nombres Representante", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("NombreRepresentante", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Teléfono Representate", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("TelefonoRepresentante", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Teléfono Adicional", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("TelefonoAdicional", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tipo Restaurante", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoRestaurante", listaTipoRestaurante, "Seleccionar", new { @class = "form-control", @required = "required" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Regresar", "BuscarReservas", null, htmlAttributes: new { @class = "btn btn-default" })
                <input type="submit" value="Ingresar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
