
@{
    ViewBag.Title = "Buscar Restaurante";
}

<h2>Buscar Restaurante</h2>

@{
    if (TempData["mensajeExitoso"] != null)
    {
        <div class="alert alert-success">
            <p>
                @TempData["mensajeExitoso"]
            </p>
        </div>
    }
    else if (TempData["mensajeError"] != null)
    {
        <div class="alert alert-danger">
            <p>
                @TempData["mensajeError"]
            </p>
        </div>
    }
}
<div class="row">

    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Búsqueda por numero RUC</h5>
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                    @using (Ajax.BeginForm("BuscarRestaurantePorRUC", "Restaurante", null,
new AjaxOptions
{
    HttpMethod = "Post",
    UpdateTargetId = "cargarListaRestaurantes_Ajax",
    LoadingElementId = "image_loading",
    InsertionMode = InsertionMode.Replace
}, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-error" })
                        <div class="form-group">                            
                            @Html.Label("Número de RUC", new { @class = "control-label" })
                            @Html.TextBox("RUC", null, new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Buscar" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Búsqueda por Nombre Comercial</h5>
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                    @using (Ajax.BeginForm("buscarRestaurantePorNombreComercial", "Restaurante", null,
new AjaxOptions
{
    HttpMethod = "Post",
    UpdateTargetId = "cargarListaRestaurantes_Ajax",
    LoadingElementId = "image_loading",
    InsertionMode = InsertionMode.Replace
}, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-error" })
                        <div class="form-group">                            
                            @Html.Label("Busqueda por Nombre Comercial", new { @class = "control-label" })
                            @Html.TextBox("ID_IdentificacionCliente", null, new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Buscar" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Búsqueda por fecha creación</h5>
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                    @using (Ajax.BeginForm("buscarRestaurantePorFechaCreacion", "Restaurante", null,
new AjaxOptions
{
    HttpMethod = "Post",
    UpdateTargetId = "cargarListaRestaurantes_Ajax",
    LoadingElementId = "image_loading",
    InsertionMode = InsertionMode.Replace
}, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-error" })
                        <div class="form-group">
                            @Html.Label("Fecha Inicio", new { @class = "control-label" })
                            @Html.TextBox("fechaInicioBusqueda", null, new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Fecha Fin", new { @class = "control-label" })
                            @Html.TextBox("fechaFinBusqueda", null, new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Buscar" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <img id="image_loading" src="~/Imagenes/loading.gif" width="30" height="30" style="display:none" />
</div>
<div id="cargarListaRestaurantes_Ajax"></div>

@section scripts{
    <script type="text/javascript">


        $(function () {
            $('#fechaInicioBusqueda').datetimepicker();
            $('#fechaFinBusqueda').datetimepicker();
        });
    </script>
}