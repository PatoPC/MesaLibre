<h2>Crear Usuario</h2>


@{
    if (TempData["mensajeExitoso"] != null)
    {
        <div class="alert alert-success">
            <p>
                @TempData["mensajeExitoso"]
            </p>
        </div>
    }
    else if (TempData["mensajeError"] != null)
    {
        <div class="alert alert-danger">
            <p>
                @TempData["mensajeError"]
            </p>
        </div>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>El correo se utlizará para iniciar sesión. </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.Label("Nombre (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("nombre", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @*@Html.ValidationMessageFor(NOMBRE, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Apellido (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Apellido", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @*@Html.ValidationMessageFor(APELLIDO, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tipo Identificación", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_TipoIdentificacion", listaTipoIdentificacion, "Selecionar Tipo Identificación", new { @class = "form-control", @required = "required" })
                @*@Html.ValidationMessageFor(TIPOIDENTIFICACION, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Identificación (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("numeroIdentificacion", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @*@Html.ValidationMessageFor(NUMEROIDENTIFICACION, "", new { @class = "text-danger" })*@
            </div>
        </div>     
        <div class="form-group">
            @Html.Label("Correo (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("correoUsuario", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tipo Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("listaTipoUsuario", listaRolUsuarios, "Selecionar tipo usuario", new { @class = "form-control", @required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Restaurante", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("listaRestaurantes", listaResturantes, "Selecionar restaurante", new { @class = "form-control", @required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Local", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("listaLocales", listaLocalesRestaurante, "Selecionar restaurante", new { @class = "form-control", @required = "required" })
            </div>
        </div>
        

        <div class="form-group">
            @Html.Label("Contraseña (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("contrasena",null, new { @class = "form-control", @required = "required" })
                
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nueva Contraseña (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("confirmarContrasena",null, new { @class = "form-control", @required = "required" })                
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear Usuario" class="btn btn-success" />
            </div>
        </div>
    </div>
}

