
@{
    ViewBag.Title = "Crear Cliente";

    List<SelectListItem> listaTipoIdentificacion = new List<SelectListItem>(){

    new SelectListItem
    {
        Text = "Cédula",
        Value = "Cedula"
    }
    ,
    new SelectListItem
    {
        Text = "RUC",
        Value = "RUC"
    }
    ,
    new SelectListItem
    {
        Text = "Pasaporte",
        Value = "Pasaporte"
    }
    };
}

<h2>Crear Cliente</h2>

@{
    if (TempData["mensajeExitoso"] != null)
    {
        <div class="alert alert-success">
            <p>
                @TempData["mensajeExitoso"]
            </p>
        </div>
    }
    else if (TempData["mensajeError"] != null)
    {
        <div class="alert alert-danger">
            <p>
                @TempData["mensajeError"]
            </p>
        </div>
    }
}
@using (Html.BeginForm("CrearCliente", "Cliente", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="row">
                <div id="cargarDatosComensal_Ajax"></div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Nombre", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Apellido ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Apellido", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Correo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Correo", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        
        
        <div class="form-group">
        @Html.Label("Tipo Identificación", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TipoRestaurante", listaTipoIdentificacion, "Seleccionar", new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Número Identificación", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("NumeroIdentificación", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
        </div>
    </div>
        <div class="form-group">
            @Html.Label("Teléfono", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Telefono", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Regresar", "BuscarComensal", null, htmlAttributes: new { @class = "btn btn-default" })
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </div>
    </div>
}
